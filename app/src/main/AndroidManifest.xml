<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="proiect.android.proiectandroidadvanced">
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission
        android:name="android.permission.READ_CONTACTS" />
    <uses-permission
        android:name="android.permission.WRITE_CONTACTS" />
    <uses-feature android:name="android.hardware.camera.flash" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ProiectAndroidAdvanced">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.ProiectAndroidAdvanced.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".PhoneDialerActivity"
            android:parentActivityName=".MainActivity">
        </activity>
        <activity android:name=".SettingsActivity"
            android:parentActivityName=".MainActivity">

        </activity>
        <activity android:name=".FlashActivity"
            android:parentActivityName=".MainActivity">

        </activity>
        <activity android:name=".ContactsManagerActivity"
            android:parentActivityName=".MainActivity">

        </activity>
    </application>

</manifest>